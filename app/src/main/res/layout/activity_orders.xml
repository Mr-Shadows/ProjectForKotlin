<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Логотип и название компании -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAP Доставка"
            android:textSize="18sp"
            android:textColor="#000000"/>
    </LinearLayout>

    <!-- Заказ номер 001 с рамкой -->
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="16dp"
        android:background="@drawable/frame_background">

        <TextView
            android:id="@+id/order001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="Заказ номер 001\n- штука1 x1\n- штука2 x3"
            android:textColor="#000000"
            android:textSize="18sp" />

    </FrameLayout>

    <!-- Заказ номер 002 с рамкой -->

    <!-- Кнопка Назад -->
    <Button
        android:id="@+id/backToMainFromOrdersButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Назад"/>

    <FrameLayout
        android:layout_width="197dp"
        android:layout_height="108dp"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="105dp"
        android:background="@drawable/frame_background">

        <TextView
            android:id="@+id/order002"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="Заказ номер 002\n- я люблю котлин! x1"
            android:textColor="#000000"
            android:textSize="18sp" />
    </FrameLayout>

</RelativeLayout>
